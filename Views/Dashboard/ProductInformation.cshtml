@model IEnumerable<BasicWebApp.Models.ProductInformation>

@{
    ViewBag.Title = "Product Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Information</h2>


@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["DeleteMessage"]
    </div>
}
@if (TempData["CreateMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["CreateMessage"]
    </div>
}
@if (TempData["EditMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["EditMessage"]
    </div>
}
<p>
    @Html.ActionLink("Create a Product", "CreateProduct")
</p>
